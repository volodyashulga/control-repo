class profile::base {
  notify {'Applying profile::base to this node!: }                                                                                                                                                                                                # Make sure vim is installed                                                                                            package { 'vim':
    ensure => installed,                                                                                                  }                                                                                                                     
  # Create user volodya                                                                                                   user { 'volodya':
    ensure => present,                                                                                                      shell => /bin/bash,                                                                                                     managehome => true,                                                                                                   }                                                                                                                                                                                                                                               # Set up motd                                                                                                           file { '/etc/motd':                                                                                                       content: "Welcome to my puppet managed project",
    ensure => file,                                                                                                         owner => 'root',                                                                                                        group => 'root',                                                                                                        mode => '0644',                                                                                                       }                                                                                                                     }
